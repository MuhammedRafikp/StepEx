<%- include('../admin_layouts/header.ejs') %>

  <div class="container-scroller">

    <%-include('navbar.ejs')%>

      <div class="container-fluid page-body-wrapper">

        <%-include('sidebar.ejs')%>

          <div class="main-panel">
            <div class="content-wrapper">

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">

                    <div class="d-flex justify-content-between">
                      <h4>CATEGORY OFFERS</h4>
                      <a href="/admin/offers-category/add-offer"><button type="button" class="btn btn-success btn-fw py-2">
                          Add Offer </button></a>
                    </div>
                    <hr>
                    <table class="table table-striped mt-5">
                      <% if (categoryOffer.length > 0) { %>
                          <thead class="text-center bg-secondary">
                              <tr>
                                  <th class="font-weight-bold">No. </th>
                                  <th class="font-weight-bold">Category </th>
                                  <th class="font-weight-bold"> Offer (%)</th>
                                  <th class="font-weight-bold"> Validity </th>
                                  <th class="font-weight-bold"> Action </th>
                              </tr>
                          </thead>
                          <tbody class="text-center">
                              <% categoryOffer.forEach((offer, index) => { %>
                                  <tr class="<%=(index+1) %2==0? 'bg-light' :'' %> ">
                                      <td><%= index + 1 %>.</td>
                                      <td><%= offer.category.name %></td>
                                      <td><%= offer.offer %></td>
                                      <td><%= offer.validity.toLocaleDateString() %></td>
                                      <td>
                                          <a href="/admin/offers-category/edit-offer?id=<%=offer.category._id%>" class="btn btn-info px-3 py-2"><span>Edit</span></a>
                                          <button class="btn btn-danger px-3 py-2" onclick="deleteOffer('<%= offer._id %>')">Delete</button>
                                      </td>
                                  </tr>
                              <% }); %>
                          </tbody>

                      <% } else { %>
                          <tbody class="text-center">
                              <tr>
                                  <td>No offers found!</td>
                              </tr>
                          </tbody>
                      <% } %>
                  </table>                  
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>

  </html>

  <script>

    function deleteOffer(categoryOfferId) {
       console.log(categoryOfferId)
       Swal.fire({
           title: 'Are you sure?',
           width: "450",
           showCancelButton: true,
           confirmButtonColor: '#3085d6',
           cancelButtonColor: '#d33',
           confirmButtonText: 'Yes, remove it!',
           reverseButtons: true,
       }).then((confirmation) => {
           if (confirmation.isConfirmed) {
               fetch(`/admin/offers-category/delete-offer?id=${categoryOfferId}`, {
                   method: 'DELETE',
                   headers: {
                       'Content-Type': 'application/json'
                   }
               }).then(response => {
                   if (response.ok) {
                       window.location.reload();
                   } else {
                       console.error('Failed to delete offer');
                   }
               }).catch(error => {
                   console.error(error.message);
               });
           }
       });
   }

</script>


  <%- include('../admin_layouts/footer.ejs') %>