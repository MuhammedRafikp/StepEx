    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        document.getElementById('withdraw-btn').addEventListener('click', function () {

            let amount = parseFloat(document.getElementById("amount").value);
            console.log(amount);
            document.getElementById("amount-error").innerText = "";

            if (!amount) {
                document.getElementById("amount-error").innerText = "Please enter an amount between ₹1 and ₹10000";
                return;
            }

            if (isNaN(amount) || amount < 0) {
                document.getElementById("amount").value = 0;
                document.getElementById("amount-error").innerText = "Please enter an amount between ₹1 and ₹10000";
            }

            if (amount < 1 || amount > 10000) {
                document.getElementById("amount-error").innerText = "Please enter an amount between ₹1 and ₹10000";
                return;
            }

            Swal.fire({
                title: 'Are you sure?',
                // text: 'Do you want to withdraw this amount?',
                // icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, withdraw',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                reverseButtons: true,
                width: "450"
            }).then((result) => {
                if (result.isConfirmed) {

                    fetch('/wallet/withdraw-money', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            amount: amount
                        })
                    })
                        .then(function (response) {
                            if (!response.ok) {
                                return response.json().then(function (data) {
                                    throw new Error(data.message);
                                });
                            }
                            return response.json();
                        })
                        .then(function (data) {

                            const Toast = Swal.mixin({
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true,
                                didOpen: (toast) => {
                                    toast.addEventListener('mouseenter', Swal.stopTimer);
                                    toast.addEventListener('mouseleave', Swal.resumeTimer);
                                }
                            });

                            Toast.fire({
                                icon: 'success',
                                width: "350",
                                text: data.message
                            }).then(() => {
                                window.location.href = "/wallet"; // Redirect to "/wallet" after the alert is closed
                            });
                        })
                        .catch(function (error) {

                            const Toast = Swal.mixin({
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true,
                                didOpen: (toast) => {
                                    toast.addEventListener('mouseenter', Swal.stopTimer);
                                    toast.addEventListener('mouseleave', Swal.resumeTimer);
                                }
                            });

                            Toast.fire({
                                icon: "warning",
                                width: "300",
                                title: error.message
                            });

                            console.error(error);
                        });

                }
            });
        });



        function setAmount(amount) {
            console.log("hello");
            document.getElementById("amount").value = amount;
        }

    </script>

