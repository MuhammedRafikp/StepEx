<%- include("../layouts/header.ejs") %>


    <style>
        .hero-wrap {
            margin-top: 110px;
            display: flex;
            align-items: center;

        }

        .shop-heading {
            text-align: left;
        }

        .breadcrumbs {
            text-align: right;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #ffffff;
            /* background-color: #f8f9fa; */
            background-clip: border-box;
            border: 1 solid;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgb(218 218 253 / 50%), 0 2px 6px 0 rgb(206 206 238 / 50%);
        }

        .me-2 {
            margin-right: .5rem !important;
        }
    </style>

    <!---- breadcrumbs---->
    <div style="background-color: #f0f0f0; height: 60px;" class="hero-wrap">
        <div class="container">
            <div class="row no-gutters slider-text align-items-start">

                <div class="col-md-6 ftco-animate shop-heading">
                    <h6 style=" color: #000;">WALLET</h6>
                </div>

                <div class="col-md-6 ftco-animate breadcrumbs">
                    <div class="breadcrumbs">
                        <span class="mr-2">
                            <a href="/"><span class="icon-home2"></span>Home ></a>
                            <a href="/wallet">Wallet</a>
                        </span>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!---- profile sidebar---->
    <section class="ftco-section ">
        <div class="container d-grid justify-content-between " style="margin-top:-50px;">
            <div class="row">
                <div class="container">
                    <div class="main-body">
                        <div class="row">

                            <div class="col-lg-4 ftco-animate">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-center text-center">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin"
                                                class="rounded-circle p-1 bg-secondary " width="50">
                                            <div class="mt-3">
                                                <h6>

                                                </h6>
                                            </div>
                                        </div>

                                        <ul class="list-group list-group-flush ">
                                            <li
                                                class="list-group-item  d-flex justify-content-between align-items-center flex-wrap border-0 ">
                                                <a href="/profile" class=" btn btn-primary py-2 px-4 w-100 "
                                                    style="font-size: 14px; font-weight: bold; "><span
                                                        class="icon-person"></span>Account deatails</a>
                                            </li>
                                            <li
                                                class="list-group-item d-flex justify-content-between align-items-center flex-wrap border-0">
                                                <a href="/orders" class=" btn btn-primary py-2 px-4 mr-2 w-100 "
                                                    style="font-size: 14px; font-weight: bold;"><span
                                                        class="icon-shopping_cart mx-1"></span><span>Orders</span></a>
                                            </li>
                                            <li
                                                class="list-group-item d-flex justify-content-between align-items-center flex-wrap  border-0">
                                                <a href="/address" class=" btn btn-primary   py-2 px-4 mr-2  w-100 "
                                                    style="font-size: 14px; font-weight: bold;"><span
                                                        class="icon-home mx-1"></span><span>Addresses</span> </a>
                                            </li>
                                            <li
                                                class="list-group-item d-flex justify-content-between align-items-center flex-wrap  border-0">
                                                <a href="/wallet" class=" btn btn-primary py-2 px-4 mr-2 w-100 active"
                                                    style="font-size: 14px; font-weight: bold;"><span
                                                        class="icon-account_balance_wallet mx-1"></span>Wallet</a>
                                            </li>
                                            <li
                                                class="list-group-item d-flex justify-content-between align-items-center flex-wrap  border-0">
                                                <a href="/coupons" class=" btn btn-primary py-2 px-4 mr-2 w-100"
                                                    style="font-size: 14px; font-weight: bold;"><span
                                                        class="icon-tags mx-1"></span>Coupons</a>
                                            </li>
                                            <li
                                                class="list-group-item d-flex justify-content-between align-items-center flex-wrap  border-0">
                                                <a href="/logout" class=" btn btn-primary py-2 px-4 mr-2 w-100"
                                                    style="font-size: 14px; font-weight: bold;"><span
                                                        class="icon-exit_to_app mx-1"></span>Logout</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-8 ftco-animate">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex mb-3">
                                            <h6 class="mb-0" style="font-weight: bold; color: #000;">Your Wallet</h6>

                                        </div>
                                        <hr>
                                        
                                        <div class="d-flex  justify-content-between ">
                                            <div class="d-flex flex-column">
                                                <div class="d-flex  ">
                                                    <p class="mb-0" style="font-weight: bold; color: #000;">
                                                        <span class="icon-account_balance_wallet mx-1">Wallet Balance:</span>
                                                    </p>
                                                    <% if(wallet){%>
                                                    <p style="color: #000; font-weight: 600;">₹<%=wallet.balance%></p>
                                                    <%}else{%>
                                                        <p style="color: #000; font-weight: 600;">₹0</p>
                                                        <%}%>
                                                </div>
                                                
                                                <div class="mt-2">
                                                    <a href="/wallet/wallet-history" class="text-info " style="font-weight: 600;">Your Transactions <span class="icon-history"></span></a>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-column ">
                                                <a href="/wallet/add-money" class="btn btn-success font-weight-bold m-1"><span class="icon-plus  mx-1"></span> Add money</a>
                                                <a href="/wallet/withdraw-money" class="btn btn-danger font-weight-bold m-1"><span class="icon-minus  mx-1"></span> Withdraw</a>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>

    </section>

    <%- include("../user/add-edit-remove-address.ejs") %>

        <%- include("../layouts/footer.ejs") %>