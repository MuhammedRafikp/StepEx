<%- include("../layouts/header.ejs") %>


    <style>
        .hero-wrap {
            margin-top: 110px;
            display: flex;
            align-items: center;

        }

        .shop-heading {
            text-align: left;
        }

        .breadcrumbs {
            text-align: right;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #ffffff;
            /* background-color: #f8f9fa; */
            background-clip: border-box;
            border: 1 solid;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgb(218 218 253 / 50%), 0 2px 6px 0 rgb(206 206 238 / 50%);
        }

        .me-2 {
            margin-right: .5rem !important;
        }
    </style>


    <div style="background-color: #f0f0f0; height: 60px;" class="hero-wrap">
        <div class="container">
            <div class="row no-gutters slider-text align-items-start">

                <div class="col-md-6 ftco-animate shop-heading">
                    <h6 style=" color: #000;">ORDER PLACED</h6>
                </div>

                <div class="col-md-6 ftco-animate breadcrumbs">
                    <div class="breadcrumbs">
                        <span class="mr-2">
                            <a href="/"><span class="icon-home2"></span>Home ></a>
                            <a href="/cart">Cart ></a>
                            <span style="color: #979797;">Order Placed</span></span>
                        </span>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section">
        <div class="container d-grid " style="margin-top:-50px;">


            <div class="d-block ">


                <div class="col-lg-9 mx-auto ">

                    <div class="card text-center ">
                        <% if (status && status === "success") { %>
                            <div>
                                <h5 class="text-success mt-4" style="font-weight: bold;"><span class="icon-verified_user"></span> Order Placed, Thank you for your order!</h5>
                            </div>
                            <div>
                                <p class="mt-4" style="font-size: 16px; color: #000;">Your order has been placed and will be processed as soon as possible.</p>
                            </div>
                            <div>
                                <p style="font-size: 16px; color: #000;">Confirmation will be sent to your email.</p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <div><a href="/shop" class="btn btn-primary m-2 mb-5">Back to shop</a></div>
                                <div><a href="/orders" class="btn btn-black m-2 mb-5">View orders</a></div>
                            </div>
                        <% } else if(status && status === "failed") { %>
                            <div>
                                <h5 class="text-danger mt-4" style="font-weight: bold;"><i class="fa-solid fa-circle-exclamation"></i> Your payment has failed.</h5>
                            </div>
                            <div>
                                <p class="mt-4" style="font-size: 16px; color: #000;">  Your payment for the order has been unsuccessful.</p>
                            </div>
                            <div>
                                <p style="font-size: 16px; color: #000;">You can make the repayment from your orders page.</p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <div><a href="/shop" class="btn btn-primary m-2 mb-5 rounded">Back to shop</a></div>
                                <div><a href="/orders" class="btn btn-black m-2 mb-5 rounded">View orders</a></div>
                            </div>
                        <% } %>
                    

                    </div>
                </div>



            </div>

        </div>
    </section>
    <script src="https://kit.fontawesome.com/55e74760a2.js" crossorigin="anonymous"></script>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js'></script>

  
    <%- include("../layouts/footer.ejs") %>