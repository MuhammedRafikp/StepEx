                            <div class="col-lg-8 ftco-animate">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 font-weight-bold">User name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="name" style="opacity:60%;"
                                                    class="form-control rounded" value="<%=user.name%>" readonly>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0 font-weight-bold">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" id="email" style="opacity:60%;"
                                                    class="form-control rounded" value="<%=user.email%>" readonly>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-sm-3 align-items-center  ">
                                                <h6 class="mb-0 font-weight-bold">Mobile</h6>
                                            </div>
